<% layout('layouts/main-layout') %>
<!DOCTYPE html>
<html>
<head>
    <title>Video Recorder</title>
    <link rel="stylesheet" href="public/css/stylesrecord.css">
</head>
<body>
    <div class="container">
        <h1>Video Recorder</h1>
        <video id="videoPreview" autoplay></video>
        <div class="buttons">
            <button class="start button" id="startRecording">Start Recording</button>
            <button class="stop button" id="stopRecording" disabled>Stop Recording</button>
        </div>
        <a id="downloadLink" class="download-link" style="display: none;">Download Video</a>
        <form id="uploadForm" style="display: none;">
            <input type="hidden" name="videoData" id="videoData">
            <button type="submit">Upload Video</button>
        </form>
    </div>
    <script src="public/js/record.js"> </script>
</body>
</html>

